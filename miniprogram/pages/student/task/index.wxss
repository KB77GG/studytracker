/* 单词列表样式（竖向排列） */
.word-cloud {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  margin-top: 15rpx;
  padding: 10rpx 0;
}

.word-tag {
  display: block;
  padding: 15rpx 20rpx;
  background: #f8f9fa;
  border: none;
  border-radius: 10rpx;
  font-size: 32rpx;
  color: #333;
  cursor: pointer;
  line-height: 1.6;
  transition: all 0.2s;
}

.word-tag:active {
  background: #E5F3F1;
  color: #1F6C65;
  transform: scale(0.98);
}
