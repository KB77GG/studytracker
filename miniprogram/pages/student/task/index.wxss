.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 150rpx;
}

.task-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.task-module {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.task-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

/* Timer Card */
.timer-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  color: white;
}

.timer-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.timer-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.timer-label {
  font-size: 28rpx;
  font-weight: 500;
}

.timer-display {
  display: flex;
  align-items: baseline;
  justify-content: center;
  margin-bottom: 25rpx;
}

.timer-time {
  font-size: 72rpx;
  font-weight: bold;
  font-family: 'Courier New', monospace;
}

.timer-target {
  font-size: 36rpx;
  margin-left: 16rpx;
  opacity: 0.8;
  font-family: 'Courier New', monospace;
}

.timer-actions {
  display: flex;
  gap: 20rpx;
  justify-content: center;
}

.timer-btn {
  flex: 1;
  max-width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: opacity 0.2s;
}

.timer-btn.pause {
  background: rgba(255, 255, 255, 0.25);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
}

.timer-btn.resume {
  background: rgba(76, 175, 80, 0.9);
}

.timer-btn.stop {
  background: rgba(244, 67, 54, 0.9);
}

.timer-btn:active {
  opacity: 0.7;
}


.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-row:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.upload-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.audio-recorder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.record-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.record-btn.recording {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.duration {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.audio-list, .image-grid {
  margin-top: 20rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.audio-name {
  font-size: 26rpx;
  color: #333;
}

.btn-play, .btn-delete {
  margin-left: 10rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  padding: 4rpx;
}

.add-btn {
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn text {
  font-size: 60rpx;
  color: #999;
}

.note-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.1);
}

.btn-submit {
  width: 100%;
  background: linear-gradient(135deg, #2C8A82 0%, #1F6C65 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 25rpx 0;
}

.btn-submit[disabled] {
  background: #ccc;
}

.feedback-card {
  background: #e8f5e9;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #c8e6c9;
}

.highlight {
  color: #2e7d32;
  font-weight: bold;
}

.status-completed {
  color: #4caf50;
  font-weight: bold;
}

.feedback-image {
  margin: 20rpx 0;
}

.annotated-image {
  width: 100%;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.feedback-audio {
  margin: 20rpx 0;
}

.audio-player {
  margin-top: 10rpx;
}

.btn-play-feedback {
  background: linear-gradient(135deg, #2C8A82 0%, #1F6C65 100%);
  color: white;
}

/* 学习材料样式 */
.material-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.material-section {
  margin-bottom: 30rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
  margin-bottom: 10rpx;
  display: block;
  background: #f0f2f5;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}

.content-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  white-space: pre-wrap;
  display: block;
}

.question-item {
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.question-item:last-child {
  border-bottom: none;
}

.question-content {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.options {
  margin-top: 10rpx;
  padding-left: 20rpx;
}

.option-item {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.topic-card {
  background: #fff9c4;
  padding: 30rpx;
  border-radius: 10rpx;
  border: 1rpx dashed #fbc02d;
}

/* TTS 朗读功能样式 */
.tts-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f0f2f5;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.control-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.speed-buttons {
  display: flex;
  gap: 10rpx;
}

.speed-btn {
  background: white;
  border: 1rpx solid #ddd;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
}

.speed-btn.active {
  background: linear-gradient(135deg, #2C8A82 0%, #1F6C65 100%);
  color: white;
  border-color: #1F6C65;
}

.subtitle-with-play {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.play-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border: none;
}

.word-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 10rpx;
}

.word-item {
  display: inline-block;
  font-size: 32rpx;
  color: #333;
  padding: 8rpx 16rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.2s;
}

.word-item:active {
  background: linear-gradient(135deg, #2C8A82 0%, #1F6C65 100%);
  color: white;
  transform: scale(0.95);
}

