.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 150rpx;
}

.task-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.task-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.task-module {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
}

.task-info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.info-row:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.upload-section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.audio-recorder {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

.record-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: white;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.record-btn.recording {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.duration {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.audio-list, .image-grid {
  margin-top: 20rpx;
}

.audio-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.audio-name {
  font-size: 26rpx;
  color: #333;
}

.btn-play, .btn-delete {
  margin-left: 10rpx;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-icon {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50%;
  padding: 4rpx;
}

.add-btn {
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-btn text {
  font-size: 60rpx;
  color: #999;
}

.note-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.action-buttons {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background: white;
  box-shadow: 0 -4rpx 16rpx rgba(0,0,0,0.1);
}

.btn-submit {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 25rpx 0;
}

.btn-submit[disabled] {
  background: #ccc;
}
