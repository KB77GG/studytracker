.container {
  padding: 28rpx;
  background: #f6f7f9;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 380rpx;
}

.hero {
  background: linear-gradient(135deg, #1f3a38 0%, #2a6a64 100%);
  color: #fff;
  padding: 28rpx 28rpx 36rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 28rpx rgba(0,0,0,0.12);
}

.brand {
  font-size: 40rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  margin-top: 12rpx;
}

.card {
  background: #fff;
  padding: 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 22rpx rgba(0,0,0,0.05);
  margin-bottom: 20rpx;
}

.chat-toolbar {
  display: flex;
  gap: 14rpx;
  margin-bottom: 16rpx;
}

.toolbar-btn {
  flex: 1;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 999rpx;
  padding: 0;
  font-size: 21rpx;
  font-weight: 600;
  background: #f8fbfb;
  color: #365654;
  border: 1rpx solid #dbe7e6;
}

.toolbar-btn.primary {
  background: linear-gradient(135deg, #1f6f68 0%, #2f8a81 100%);
  color: #fff;
  border-color: #1f6f68;
  box-shadow: 0 6rpx 14rpx rgba(31, 111, 104, 0.24);
}

.empty {
  text-align: center;
  font-size: 22rpx;
  color: #7a8b8b;
  padding: 12rpx 0;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e2b2b;
  margin-bottom: 16rpx;
}

.tabs {
  display: flex;
  gap: 10rpx;
  margin-bottom: 16rpx;
  background: #f3f6f6;
  border-radius: 18rpx;
  padding: 8rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 12rpx;
  font-size: 23rpx;
  background: transparent;
  color: #5a6a69;
  border: 1rpx solid transparent;
}

.tab.active {
  background: #ffffff;
  color: #1f6f68;
  border-color: #d2e7e4;
  font-weight: 700;
  box-shadow: 0 2rpx 10rpx rgba(19, 44, 42, 0.08);
}

.source-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.pill {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  background: #f5f7f8;
  color: #4a5b5b;
  font-size: 21rpx;
  border: 1rpx solid #e4e6e8;
}

.pill.active {
  background: #dff3f1;
  color: #1b6a63;
  border-color: #bfe7e2;
  font-weight: 600;
}

.source-tip {
  font-size: 22rpx;
  color: #7a8b8b;
}

.framework {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
  border-top: 1rpx solid #f0f1f2;
  border-bottom: 1rpx solid #f0f1f2;
  margin-bottom: 16rpx;
}

.label {
  font-size: 24rpx;
  color: #536060;
}

.picker {
  background: #f6f7f8;
  border-radius: 14rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
  color: #2c3a3a;
}

.btn-outline {
  border: 1rpx solid #8ebfba;
  color: #1f6f68;
  background: #f7fcfb;
  border-radius: 999rpx;
  padding: 10rpx;
  font-size: 23rpx;
  font-weight: 600;
}

.question-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #222;
}

.question-meta {
  font-size: 22rpx;
  color: #7b8a8a;
  margin-top: 8rpx;
  display: block;
}

.chat-card {
  padding: 0;
  background: transparent;
  box-shadow: none;
  margin-bottom: 0;
}

.chat-title {
  margin: 0 0 12rpx;
  padding: 0 6rpx;
}

.chat-scroll {
  height: auto;
  min-height: 200rpx;
  max-height: 60vh;
  padding: 18rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0 8rpx 22rpx rgba(0,0,0,0.05);
}

.chat-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding-right: 4rpx;
}

.chat-row {
  display: flex;
}

.chat-row.user {
  justify-content: flex-end;
}

.chat-row.system,
.chat-row.assistant {
  justify-content: flex-start;
}

.bubble {
  max-width: 90%;
  padding: 16rpx;
  border-radius: 18rpx;
  background: #f7f9fa;
  border: 1rpx solid #e6ebed;
}

.bubble.system {
  background: #f2f6f5;
  border-color: #dfe8e6;
  max-width: 100%;
  padding: 12rpx 14rpx;
}

.bubble.user {
  background: #e8f6f3;
  border-color: #cfe8e4;
}

.bubble.assistant {
  background: #ffffff;
  border-color: #e6ebed;
}

.bubble-label {
  font-size: 22rpx;
  color: #6b7c7a;
  margin-bottom: 8rpx;
  display: block;
}

.bubble-text {
  font-size: 24rpx;
  line-height: 1.6;
  color: #1f2d2c;
}

.bubble.system .bubble-label {
  margin-bottom: 4rpx;
  font-size: 20rpx;
}

.bubble.system .bubble-text {
  font-size: 22rpx;
  line-height: 1.5;
}

.btn-audio-replay {
  margin-top: 10rpx;
  width: 170rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
  border-radius: 999rpx;
  font-size: 20rpx;
  color: #1f6f68;
  border: 1rpx solid #cfe8e4;
  background: #eef7f6;
}

.msg-actions {
  margin-top: 10rpx;
  display: flex;
  gap: 14rpx;
}

.msg-action {
  font-size: 21rpx;
  color: #2f6e68;
}

.msg-action.danger {
  color: #9a5b5b;
}

.assistant-block {
  margin-top: 12rpx;
}

.assistant-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2a3c3a;
  margin-bottom: 8rpx;
}

.score-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.score-item {
  min-width: 118rpx;
  padding: 10rpx 12rpx;
  border-radius: 12rpx;
  background: #f7faf9;
  border: 1rpx solid #e3eceb;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.score-item.overall {
  background: #e9f7f4;
  border-color: #c8e9e3;
}

.score-label {
  font-size: 20rpx;
  color: #5b6967;
}

.score-value {
  font-size: 28rpx;
  font-weight: 700;
  color: #1e5f59;
}

.record-tip {
  font-size: 20rpx;
  color: #6c7a7a;
  line-height: 1.4;
  margin-top: 8rpx;
}

.composer-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(48px + env(safe-area-inset-bottom));
  padding: 10rpx 20rpx 10rpx;
  background: linear-gradient(180deg, rgba(246, 247, 249, 0) 0%, rgba(246, 247, 249, 0.96) 30%, rgba(246, 247, 249, 1) 100%);
  z-index: 30;
}

.composer-card {
  background: #ffffff;
  border-radius: 28rpx;
  border: 1rpx solid #e4ecea;
  box-shadow: 0 10rpx 30rpx rgba(23, 47, 44, 0.12);
  padding: 14rpx;
}

.composer-input-row {
  display: flex;
  align-items: stretch;
}

.composer-input {
  flex: 1;
  max-height: 160rpx;
  min-height: 70rpx;
  background: #f7f9f9;
  border-radius: 22rpx;
  border: 1rpx solid #e5eceb;
  padding: 14rpx 18rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  color: #1f2d2c;
}

.composer-action-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-top: 10rpx;
}

.btn-send-icon {
  width: 62rpx;
  min-width: 62rpx;
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 50%;
  padding: 0;
  background: linear-gradient(135deg, #1f6f68 0%, #2f8a81 100%);
  color: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(31, 111, 104, 0.28);
}

.btn-send-icon[disabled] {
  background: #d9e0df;
  box-shadow: none;
}

.send-glyph {
  width: 26rpx;
  height: 26rpx;
  position: relative;
}

.send-glyph-line {
  width: 16rpx;
  height: 3rpx;
  border-radius: 999rpx;
  background: #ffffff;
  position: absolute;
  left: 2rpx;
  top: 12rpx;
}

.send-glyph-head {
  width: 10rpx;
  height: 10rpx;
  border-top: 3rpx solid #ffffff;
  border-right: 3rpx solid #ffffff;
  transform: rotate(45deg);
  position: absolute;
  right: 1rpx;
  top: 8rpx;
}

.btn-oral-toggle {
  height: 54rpx;
  line-height: 54rpx;
  border-radius: 999rpx;
  padding: 0 20rpx;
  font-size: 21rpx;
  color: #4c605f;
  background: #f5f7f7;
  border: 1rpx solid #dde5e4;
}

.btn-oral-toggle.active {
  color: #1f6f68;
  background: #ebf7f5;
  border-color: #c7e6e2;
  font-weight: 600;
}

.composer-actions-right {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.btn-mic {
  width: 62rpx;
  min-width: 62rpx;
  height: 62rpx;
  line-height: 62rpx;
  padding: 0;
  border-radius: 50%;
  font-size: 24rpx;
  color: #3b514f;
  background: #f5f7f7;
  border: 1rpx solid #d9e3e2;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-mic:active {
  background: #ebf0ef;
}

.mic-icon {
  width: 28rpx;
  height: 28rpx;
  position: relative;
}

.mic-head {
  width: 16rpx;
  height: 18rpx;
  border: 3rpx solid #3f5453;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  box-sizing: border-box;
}

.mic-stem {
  width: 3rpx;
  height: 7rpx;
  background: #3f5453;
  border-radius: 999rpx;
  position: absolute;
  left: 50%;
  top: 17rpx;
  transform: translateX(-50%);
}

.mic-base {
  width: 14rpx;
  height: 3rpx;
  background: #3f5453;
  border-radius: 999rpx;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}

.recording-strip {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.recording-btn {
  width: 58rpx;
  min-width: 58rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 50%;
  padding: 0;
  text-align: center;
  font-size: 30rpx;
  background: #f0f3f3;
  color: #3d5150;
  border: 1rpx solid #d7e1df;
}

.recording-btn.confirm {
  background: #1f6f68;
  color: #fff;
  border-color: #1f6f68;
}

.recording-wave-wrap {
  flex: 1;
  min-width: 0;
  height: 58rpx;
  border-radius: 999rpx;
  background: #f6f8f8;
  border: 1rpx solid #e6edec;
  padding: 0 14rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.recording-wave {
  flex: 1;
  height: 32rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  overflow: hidden;
}

.wave-bar {
  width: 3rpx;
  min-height: 8rpx;
  border-radius: 999rpx;
  background: #1f2d2c;
}

.recording-time {
  font-size: 22rpx;
  color: #1f2d2c;
  font-weight: 600;
}

.session-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(11, 18, 17, 0.3);
  z-index: 40;
}

.session-drawer {
  position: fixed;
  left: 0;
  top: 0;
  bottom: calc(48px + env(safe-area-inset-bottom));
  width: 74%;
  max-width: 560rpx;
  background: #ffffff;
  transform: translateX(-105%);
  transition: transform 0.22s ease;
  z-index: 45;
  box-shadow: 16rpx 0 40rpx rgba(18, 32, 30, 0.18);
  padding: 26rpx 20rpx calc(30rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.session-drawer.open {
  transform: translateX(0);
}

.session-drawer-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.session-drawer-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2d2c;
}

.session-drawer-close {
  font-size: 22rpx;
  color: #5e7170;
}

.session-new-btn {
  height: 62rpx;
  line-height: 62rpx;
  border-radius: 999rpx;
  padding: 0;
  font-size: 22rpx;
  color: #1f6f68;
  background: #eef7f6;
  border: 1rpx solid #cfe8e4;
  margin-bottom: 12rpx;
}

.session-empty {
  color: #7a8b8b;
  font-size: 22rpx;
  padding-top: 16rpx;
}

.session-list {
  flex: 1;
  min-height: 0;
}

.session-item {
  border: 1rpx solid #e8eded;
  border-radius: 14rpx;
  padding: 12rpx;
  margin-bottom: 10rpx;
  background: #fff;
}

.session-item.active {
  border-color: #bfe7e2;
  background: #eef7f6;
}

.session-item-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.session-part {
  font-size: 21rpx;
  font-weight: 600;
  color: #2f5d59;
}

.session-time {
  font-size: 20rpx;
  color: #7a8b8b;
}

.session-preview {
  font-size: 21rpx;
  line-height: 1.5;
  color: #334241;
}

.logic-block {
  margin-bottom: 16rpx;
}

.block-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #2c3a3a;
  margin-bottom: 8rpx;
}

.list {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.list-item {
  font-size: 22rpx;
  color: #364444;
}

.rewrite {
  font-size: 24rpx;
  line-height: 1.6;
  color: #202828;
  margin-bottom: 12rpx;
}

.tts-row {
  display: flex;
  justify-content: flex-start;
  margin-bottom: 12rpx;
}

.btn-tts {
  background: #eef7f6;
  color: #1f6f68;
  border: 1rpx solid #cfe8e4;
  border-radius: 14rpx;
  padding: 8rpx 16rpx;
  font-size: 22rpx;
}

.feedback-card {
  background: #f8fafb;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 12rpx;
  border: 1rpx solid #eef1f2;
}

.fb-original {
  font-size: 22rpx;
  color: #566666;
  margin-bottom: 6rpx;
  display: block;
}

.fb-correct {
  font-size: 23rpx;
  color: #1f6f68;
  margin-bottom: 6rpx;
  display: block;
}

.fb-note {
  font-size: 22rpx;
  color: #6c7a7a;
}
