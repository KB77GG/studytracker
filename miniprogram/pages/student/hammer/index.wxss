page {
  --primary: #3a8c82;
  --primary-dark: #2a6b62;
  --primary-light: #eaf4f3;
  --primary-mid: #c2e0dc;
  --text: #1a2b2a;
  --text-secondary: #5a7472;
  --surface: #ffffff;
  --bg: #f5faf9;
  --surface-gray: #f7f8fa;
  --border: #d4e8e6;
  --shadow-sm: 0 4rpx 24rpx rgba(58, 140, 130, 0.1);
  --shadow-md: 0 8rpx 32rpx rgba(58, 140, 130, 0.14);
  --tabbar-height: 60px;

  background: var(--bg);
  color: var(--text);
}

/* Guest mode banner */
.guest-banner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(135deg, #e8f5e9, #e0f2f1);
  padding: 12rpx 24rpx;
  padding-bottom: 12rpx;
  position: relative;
  z-index: 120;
}
.guest-text {
  font-size: 24rpx;
  color: #555;
  flex: 1;
}
.guest-login-btn {
  background: #1f6c65;
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 28rpx;
  border-radius: 24rpx;
  flex-shrink: 0;
  margin-left: 16rpx;
}

.page-shell {
  position: relative;
  height: 100vh;
  background: var(--bg);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.top-nav {
  flex-shrink: 0;
  min-height: 112rpx;
  padding: 16rpx 24rpx;
  padding-top: calc(env(safe-area-inset-top, 20px) + 16rpx);
  background: var(--surface);
  border-bottom: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  gap: 12rpx;
  z-index: 20;
}

.nav-icon-btn {
  width: 72rpx;
  height: 72rpx;
  border: none;
  border-radius: 22rpx;
  background: var(--primary-light);
  border: 1.5rpx solid var(--primary-mid);
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 0 0 auto;
}

.header-icon {
  width: 34rpx;
  height: 34rpx;
}

.nav-title-wrap {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: baseline;
  justify-content: center;
  gap: 8rpx;
  overflow: hidden;
}

.nav-title-brand {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--primary);
  font-family: 'Noto Serif SC', serif;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.nav-title-rest {
  font-size: 30rpx;
  font-weight: 700;
  color: var(--text);
  font-family: 'Noto Serif SC', serif;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.part-selector {
  flex: 0 0 auto;
  min-height: 60rpx;
  border-radius: 40rpx;
  border: 1.5rpx solid var(--primary-mid);
  background: var(--primary-light);
  padding: 0 14rpx;
  margin: 0;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.part-icon {
  width: 26rpx;
  height: 26rpx;
}

.part-text {
  font-size: 26rpx;
  color: var(--primary-dark);
  font-weight: 600;
}

.part-chevron {
  width: 22rpx;
  height: 22rpx;
}

.message-scroll {
  flex: 1;
  min-height: 0;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.message-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 20rpx 0 380rpx;
}

.topic-card {
  background: var(--surface);
  border: 1rpx solid var(--border);
  border-radius: 40rpx;
  padding: 36rpx 40rpx;
  box-shadow: var(--shadow-sm);
  animation: slideDown 0.4s ease;
}

.topic-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.topic-head-left {
  display: flex;
  align-items: center;
  gap: 10rpx;
  min-width: 0;
}

.part-tag {
  height: 42rpx;
  border-radius: 999rpx;
  padding: 0 20rpx;
  background: var(--primary);
  color: #ffffff;
  font-size: 22rpx;
  line-height: 42rpx;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.random-label {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.change-btn {
  min-height: 56rpx;
  border-radius: 32rpx;
  border: 1.5rpx solid var(--primary-mid);
  background: var(--primary-light);
  padding: 0 20rpx;
  margin: 0;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--primary-dark);
  font-weight: 600;
}

.change-icon,
.sheet-btn-icon {
  width: 24rpx;
  height: 24rpx;
}

.topic-title {
  display: block;
  font-size: 32rpx;
  line-height: 1.5;
  color: var(--text);
  font-weight: 700;
  font-family: 'Noto Serif SC', serif;
}

.topic-prompt {
  display: block;
  margin-top: 14rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--text-secondary);
}

.topic-bullets,
.topic-part3-block {
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.topic-bullet {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.bullet-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--primary);
  margin-top: 12rpx;
  flex-shrink: 0;
}

.topic-bullet-text {
  flex: 1;
  min-width: 0;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text);
}

.topic-expand {
  margin-top: 14rpx;
  align-self: flex-start;
  min-height: 56rpx;
  border-radius: 28rpx;
  background: var(--primary-light);
  border: 1rpx solid var(--primary-mid);
  padding: 0 16rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  font-size: 22rpx;
  color: var(--primary-dark);
}

.topic-expand-icon {
  width: 24rpx;
  height: 24rpx;
  transition: transform 0.2s ease;
}

.topic-expand-icon.expanded {
  transform: rotate(180deg);
}

.empty-state {
  margin-top: 120rpx;
  text-align: center;
  color: var(--text-secondary);
  font-size: 26rpx;
}

.system-row {
  display: flex;
  justify-content: center;
}

.system-strip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  max-width: 90%;
  min-height: 48rpx;
  border-radius: 999rpx;
  background: var(--primary-light);
  color: var(--text-secondary);
  font-size: 22rpx;
  padding: 0 24rpx;
}

.bubble-row {
  display: flex;
  align-items: flex-end;
  gap: 12rpx;
  animation: fadeIn 0.35s ease;
}

.bubble-row.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background: var(--primary-light);
  border: 2rpx solid var(--primary-mid);
  color: var(--text-secondary);
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.user-av {
  background: var(--primary);
  border-color: rgba(255, 255, 255, 0.5);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 700;
}

.ai-av {
  font-size: 24rpx;
}

.assistant-stack {
  max-width: 82%;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.bubble {
  max-width: 82%;
  border-radius: 36rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  box-shadow: 0 4rpx 16rpx rgba(58, 140, 130, 0.12);
}

.bubble.user {
  background: var(--primary);
  color: #ffffff;
  border-bottom-right-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(58, 140, 130, 0.2);
}

.bubble.ai {
  max-width: 100%;
  background: var(--surface);
  color: var(--text);
  border: 1rpx solid var(--border);
  border-bottom-left-radius: 8rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.bubble-text {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  color: inherit;
  white-space: pre-wrap;
  word-break: break-word;
}

.user-meta-row {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.small-link {
  min-height: 52rpx;
  border-radius: 26rpx;
  border: 1.5rpx solid var(--primary-mid);
  background: var(--primary-light);
  color: var(--primary-dark);
  padding: 0 16rpx;
  margin: 0;
  font-size: 22rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.status-text {
  font-size: 22rpx;
  color: var(--text-secondary);
}

.status-text.failed {
  color: #b25555;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
}

.retry-text {
  color: var(--primary-dark);
  text-decoration: underline;
}

.feedback-card {
  background: var(--surface);
  border-radius: 36rpx;
  border: 1rpx solid var(--border);
  box-shadow: var(--shadow-sm);
  padding: 24rpx;
  animation: fadeIn 0.35s ease;
}

.feedback-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 14rpx;
  color: var(--primary);
  font-size: 22rpx;
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
}

.feedback-star {
  font-size: 24rpx;
  line-height: 1;
}

.score-row {
  display: flex;
  gap: 10rpx;
  margin-bottom: 12rpx;
}

.score-pill {
  flex: 1;
  min-width: 0;
  background: var(--primary-light);
  border-radius: 20rpx;
  padding: 12rpx 10rpx;
  text-align: center;
}

.score-label {
  display: block;
  font-size: 20rpx;
  color: var(--text-secondary);
  margin-bottom: 4rpx;
}

.score-val {
  display: block;
  font-size: 36rpx;
  color: var(--primary-dark);
  font-weight: 700;
  line-height: 1.1;
}

.overall-score {
  display: block;
  margin-bottom: 8rpx;
  font-size: 22rpx;
  color: var(--primary-dark);
  font-weight: 700;
}

.feedback-text {
  display: block;
  font-size: 26rpx;
  line-height: 1.6;
  color: var(--text-secondary);
}

.assistant-block {
  background: var(--surface);
  border: 1rpx solid var(--border);
  border-radius: 28rpx;
  padding: 18rpx 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(58, 140, 130, 0.08);
}

.assistant-title {
  display: block;
  font-size: 24rpx;
  color: var(--primary-dark);
  font-weight: 700;
  margin-bottom: 8rpx;
}

.line-item {
  display: block;
  font-size: 24rpx;
  line-height: 1.6;
  color: var(--text);
  white-space: pre-wrap;
  word-break: break-word;
}

.line-item.minus {
  color: #7b5555;
}

.line-item.highlight {
  color: var(--primary-dark);
}

.line-item.tip {
  color: var(--text-secondary);
}

.detail-card {
  margin-top: 8rpx;
  background: #f8fbfa;
  border: 1rpx solid #dcebe8;
  border-radius: 20rpx;
  padding: 12rpx;
}

.bottom-pad {
  height: 20rpx;
}

.to-bottom-btn {
  position: fixed;
  right: 24rpx;
  bottom: calc(300rpx + var(--tabbar-height) + env(safe-area-inset-bottom));
  width: 72rpx;
  height: 72rpx;
  border: none;
  border-radius: 50%;
  background: rgba(58, 140, 130, 0.94);
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 58;
  box-shadow: 0 6rpx 20rpx rgba(58, 140, 130, 0.35);
}

.to-bottom-icon {
  width: 34rpx;
  height: 34rpx;
}

.composer-wrap {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom));
  background: var(--surface);
  border-top: 1rpx solid var(--border);
  box-shadow: 0 -8rpx 40rpx rgba(58, 140, 130, 0.08);
  padding: 12rpx 16rpx calc(20rpx + env(safe-area-inset-bottom));
  z-index: 60;
  box-sizing: border-box;
}

.composer-panel {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.quick-actions {
  background: var(--surface);
  border: 1rpx solid var(--border);
  border-radius: 24rpx;
  overflow: hidden;
}

.quick-item {
  min-height: 86rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: var(--text);
  border-bottom: 1rpx solid var(--border);
}

.quick-item:last-child {
  border-bottom: none;
}

.composer-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.input-add-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  border: 1.5rpx solid var(--primary-mid);
  background: var(--primary-light);
  color: var(--primary);
  padding: 0;
  margin: 0;
  flex: 0 0 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.plus-icon {
  width: 34rpx;
  height: 34rpx;
}

.composer-input-wrap {
  flex: 1;
  min-width: 0;
}

.input-field {
  width: 100%;
  min-height: 84rpx;
  max-height: 320rpx;
  background: var(--bg);
  border: 1.5rpx solid var(--border);
  border-radius: 40rpx;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text);
}

.input-field:focus {
  border-color: var(--primary);
  box-shadow: 0 0 0 6rpx rgba(58, 140, 130, 0.12);
}

.mic-btn,
.send-btn {
  width: 96rpx;
  height: 96rpx;
  border: none;
  border-radius: 50%;
  background: var(--primary);
  margin: 0;
  padding: 0;
  flex: 0 0 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(58, 140, 130, 0.35);
}

.mic-btn.recording {
  animation: pulse 1.2s infinite;
}

.mic-icon,
.send-icon {
  width: 40rpx;
  height: 40rpx;
}

.send-btn.show {
  animation: sendAppear 0.2s ease-out;
}

.recording-strip {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.recording-btn {
  width: 68rpx;
  height: 68rpx;
  border: none;
  border-radius: 50%;
  margin: 0;
  background: var(--primary-light);
  color: var(--primary-dark);
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 0 0 68rpx;
}

.recording-btn.confirm {
  background: var(--primary);
}

.recording-btn-text {
  font-size: 32rpx;
  line-height: 1;
}

.recording-btn.confirm .recording-btn-text {
  color: #ffffff;
}

.recording-wave-wrap {
  flex: 1;
  min-width: 0;
  height: 84rpx;
  border-radius: 42rpx;
  background: var(--bg);
  border: 1rpx solid var(--border);
  padding: 0 16rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.recording-wave {
  flex: 1;
  min-width: 0;
  height: 42rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
  overflow: hidden;
}

.wave-bar {
  width: 4rpx;
  min-height: 8rpx;
  border-radius: 999rpx;
  background: var(--primary-dark);
}

.recording-time {
  font-size: 24rpx;
  color: var(--text);
  font-weight: 600;
}

.record-status-pill {
  align-self: center;
  max-width: 100%;
  min-height: 48rpx;
  border-radius: 999rpx;
  background: var(--primary-light);
  color: var(--text-secondary);
  font-size: 22rpx;
  line-height: 1.4;
  padding: 10rpx 20rpx;
}

.context-mask,
.sheet-mask,
.session-mask {
  position: fixed;
  inset: 0;
}

.context-mask {
  z-index: 73;
  background: transparent;
}

.context-menu {
  position: fixed;
  left: 24rpx;
  right: 24rpx;
  bottom: calc(220rpx + var(--tabbar-height) + env(safe-area-inset-bottom));
  background: var(--surface);
  border: 1rpx solid var(--border);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 40rpx rgba(18, 41, 45, 0.18);
  z-index: 74;
}

.context-item {
  min-height: 88rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  border-bottom: 1rpx solid var(--border);
}

.context-item:last-child {
  border-bottom: none;
}

.context-icon {
  width: 32rpx;
  height: 32rpx;
}

.context-label {
  font-size: 24rpx;
  color: var(--text);
}

.sheet-mask {
  z-index: 75;
  background: rgba(7, 16, 20, 0.38);
}

.mode-sheet {
  position: fixed;
  left: 0;
  right: 0;
  bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom));
  background: var(--surface);
  border-top-left-radius: 28rpx;
  border-top-right-radius: 28rpx;
  padding: 18rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -10rpx 30rpx rgba(10, 24, 30, 0.14);
  z-index: 80;
}

.sheet-handle {
  width: 80rpx;
  height: 8rpx;
  border-radius: 999rpx;
  background: var(--border);
  margin: 0 auto 18rpx;
}

.sheet-section + .sheet-section {
  margin-top: 16rpx;
}

.sheet-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
}

.segmented {
  background: var(--bg);
  border-radius: 20rpx;
  padding: 6rpx;
  display: flex;
  gap: 8rpx;
}

.segmented.compact {
  width: 320rpx;
}

.seg-item {
  flex: 1;
  min-height: 64rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #587077;
  display: flex;
  align-items: center;
  justify-content: center;
}

.seg-item.active {
  background: #ffffff;
  color: var(--primary-dark);
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(18, 40, 45, 0.08);
}

.sheet-tip {
  display: block;
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #7a8a92;
}

.chip-wrap {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.chip {
  min-height: 56rpx;
  border-radius: 28rpx;
  border: 1rpx solid var(--border);
  background: #ffffff;
  color: #4f666c;
  font-size: 22rpx;
  padding: 0 18rpx;
  display: flex;
  align-items: center;
}

.chip.active {
  background: var(--primary-light);
  border-color: var(--primary-mid);
  color: var(--primary-dark);
}

.sheet-actions {
  margin-top: 20rpx;
  display: flex;
  gap: 12rpx;
}

.sheet-btn {
  flex: 1;
  min-height: 64rpx;
  border-radius: 32rpx;
  border: none;
  margin: 0;
  background: var(--primary);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.sheet-btn.ghost {
  background: var(--primary-light);
  color: var(--primary-dark);
  border: 1rpx solid var(--primary-mid);
}

.session-mask {
  z-index: 90;
  background: rgba(7, 16, 20, 0.32);
}

.session-drawer {
  position: fixed;
  left: 0;
  top: 0;
  bottom: calc(var(--tabbar-height) + env(safe-area-inset-bottom));
  width: 78%;
  max-width: 620rpx;
  background: #ffffff;
  transform: translateX(-102%);
  transition: transform 0.22s ease;
  z-index: 95;
  box-shadow: 14rpx 0 36rpx rgba(11, 25, 31, 0.2);
  padding: 22rpx 18rpx calc(24rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  min-height: 0;
}

.session-drawer.open {
  transform: translateX(0);
}

.session-drawer-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.session-drawer-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text);
}

.session-drawer-close {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.session-new-btn {
  min-height: 64rpx;
  border-radius: 32rpx;
  border: 1rpx solid var(--primary-mid);
  background: var(--primary-light);
  color: var(--primary-dark);
  font-size: 24rpx;
  margin: 0 0 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.session-empty {
  font-size: 24rpx;
  color: #7a8b93;
  padding: 16rpx 0;
}

.session-list {
  flex: 1;
  min-height: 0;
  height: 100%;
}

.session-item {
  border: 1rpx solid var(--border);
  border-radius: 20rpx;
  padding: 14rpx;
  margin-bottom: 10rpx;
  background: #ffffff;
}

.session-item.active {
  border-color: var(--primary-mid);
  background: #ecf7f4;
}

.session-item-top {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.session-part {
  font-size: 22rpx;
  color: var(--primary-dark);
  font-weight: 600;
}

.session-time {
  font-size: 21rpx;
  color: #80919a;
}

.session-preview {
  font-size: 23rpx;
  color: #304349;
  line-height: 1.45;
}

.nav-icon-btn::after,
.part-selector::after,
.change-btn::after,
.topic-expand::after,
.small-link::after,
.to-bottom-btn::after,
.input-add-btn::after,
.mic-btn::after,
.send-btn::after,
.sheet-btn::after,
.session-new-btn::after,
.recording-btn::after {
  border: none;
}

button[disabled] {
  opacity: 0.4;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-8rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(6rpx);
  }

  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%,
  100% {
    box-shadow: 0 8rpx 24rpx rgba(58, 140, 130, 0.35);
  }

  50% {
    box-shadow: 0 8rpx 40rpx rgba(58, 140, 130, 0.6);
    transform: scale(1.06);
  }
}

@keyframes sendAppear {
  from {
    opacity: 0;
    transform: scale(0.8);
  }

  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* ===== Typing indicator ===== */
.typing-bubble {
  min-width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
}

.typing-dots {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.typing-dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: var(--primary);
  opacity: 0.4;
  animation: typingBounce 1.4s infinite ease-in-out;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typingBounce {
  0%, 80%, 100% {
    opacity: 0.4;
    transform: scale(1);
  }

  40% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* ===== Quick reply suggestions ===== */
.quick-reply-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  padding: 8rpx 0 16rpx;
  animation: fadeIn 0.35s ease;
}

.quick-reply-chip {
  height: 64rpx;
  border-radius: 32rpx;
  border: 1.5rpx solid var(--primary-mid);
  background: var(--primary-light);
  color: var(--primary-dark);
  font-size: 24rpx;
  font-weight: 600;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.quick-reply-chip:active {
  background: var(--primary-mid);
}
