.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.page-scroll {
  height: calc(100vh - 120rpx);
  box-sizing: border-box;
  padding-bottom: 140rpx; /* leave space for tabbar */
}
/* Header */
.header-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 40rpx;
  gap: 16rpx;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.hello {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.sub-text {
  font-size: 26rpx;
  color: #999;
}

.date-badge {
  background: #EAF6F4;
  color: #20756F;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.sub-btn {
  border: 1px solid #20756F;
  color: #20756F;
  background: #EAF6F4;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 22rpx;
  line-height: 1.6;
}

/* Progress Card */
.progress-card {
  background: linear-gradient(135deg, #EAF6F4 0%, #d9f2ee 100%);
  border-radius: 24rpx;
  padding: 36rpx;
  color: #1f3a3a;
  margin-bottom: 36rpx;
  box-shadow: 0 10rpx 20rpx rgba(0,0,0,0.05);
}

.progress-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.progress-label {
  font-size: 28rpx;
  color: #2c3e50;
}

.progress-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #20756F;
}

.progress-bar-bg {
  height: 14rpx;
  background: rgba(32,117,111,0.12);
  border-radius: 999rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}

.progress-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #20756F, #36A59D);
  border-radius: 999rpx;
  transition: width 0.5s ease;
}

.progress-tips {
  font-size: 24rpx;
  color: #4b5c63;
}

/* Task List */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.notebook-entry {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.note-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #2c3e50;
}

.note-desc {
  font-size: 24rpx;
  color: #909399;
}

.note-count {
  font-size: 24rpx;
  color: #20756F;
  background: #EAF6F4;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
  transition: all 0.2s;
}

.task-card:active {
  transform: scale(0.98);
}

.task-card.done {
  opacity: 0.8;
  background: #fcfcfc;
}

.card-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.task-icon {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  background: #f2f5f7;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #20756F;
  border: 2rpx solid #dce7e4;
}

.task-icon.listening { background: #e8f5e9; color: #20756F; }
.task-icon.reading { background: #e3f2fd; color: #1e88e5; }
.task-icon.writing { background: #fff3e0; color: #fb8c00; }
.task-icon.vocab { background: #f3e5f5; color: #8e24aa; }
.task-icon.speaking { background: #e0f2f1; color: #00695c; }
.task-icon.default { background: #f2f5f7; color: #20756F; }

.task-content {
  display: flex;
  flex-direction: column;
}

.task-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.task-time {
  font-size: 24rpx;
  color: #999;
}

.status-badge {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.status-badge.pending { background: #ffe8d6; color: #d35400; }
.status-badge.submitted { background: #fff9e6; color: #d39e00; }
.status-badge.completed { background: #e6f4ec; color: #1b5e20; border: 1rpx solid #cde6d4; }
.status-badge.rejected { background: #ffebee; color: #f44336; }

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.empty-sub {
  font-size: 26rpx;
  color: #999;
}

/* Timer Section */
.task-card {
  flex-direction: column;
  align-items: stretch;
}

.card-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.timer-section {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1px solid #f0f0f0;
}

.timer-display {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.timer-label {
  font-size: 28rpx;
}

.timer-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #20756F;
  font-family: 'Courier New', monospace;
}

.timer-text.overtime {
  color: #ff9800;
  animation: pulse 1s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.7; }
}

.timer-controls {
  display: flex;
  gap: 16rpx;
  position: relative;
  z-index: 10;
}

.timer-btn {
  flex: 1;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0;
  margin: 0;
  border-radius: 32rpx;
  border: none;
  text-align: center;
  cursor: pointer;
}


.timer-btn.start {
  background: linear-gradient(135deg, #36A59D 0%, #20756F 100%);
  color: white;
  box-shadow: 0 8rpx 16rpx rgba(32, 117, 111, 0.18);
}

.timer-btn.pause {
  background: #ff9800;
  color: white;
}

.timer-btn.resume {
  background: #4caf50;
  color: white;
}

.timer-btn.stop {
  background: #f44336;
  color: white;
}
