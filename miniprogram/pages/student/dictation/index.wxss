/* 听写练习页面样式 - 睿然品牌绿色主题 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部导航区 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.logo {
  font-size: 32rpx;
  font-weight: bold;
  color: #2e7d32;
}

.chapter {
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

.accent-toggle {
  display: flex;
  background: #f5f5f5;
  border-radius: 30rpx;
  padding: 6rpx;
}

.accent-btn {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 24rpx;
  transition: all 0.3s;
}

.accent-btn.active {
  background: #2e7d32;
  color: #fff;
}

/* 练习主体区域 */
.practice-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 60rpx 40rpx;
}

.prompt-text {
  font-size: 40rpx;
  color: #333;
  margin-bottom: 80rpx;
  font-weight: 500;
}

/* 输入区域 */
.input-area {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.word-input {
  flex: 1;
  height: 100rpx;
  border: none;
  border-bottom: 4rpx solid #2e7d32;
  background: transparent;
  font-size: 48rpx;
  text-align: center;
  color: #333;
}

.word-input::placeholder {
  color: #bbb;
  font-size: 32rpx;
}

.submit-btn {
  width: 140rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
  color: #fff;
  font-size: 30rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(46, 125, 50, 0.3);
}

.submit-btn:active {
  transform: scale(0.95);
}

/* 播放按钮 */
.play-btn {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.play-btn:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.play-icon {
  width: 60rpx;
  height: 60rpx;
}

.play-icon-text {
  font-size: 56rpx;
}

.play-btn.playing {
  animation: pulse 0.8s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.1); }
  100% { transform: scale(1); }
}

/* 进度区域 */
.progress-area {
  width: 100%;
  padding: 30rpx 40rpx;
  background: #fff;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #e0e0e0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #43a047, #2e7d32);
  border-radius: 4rpx;
  transition: width 0.3s;
}

.progress-text {
  text-align: right;
  font-size: 26rpx;
  color: #666;
}

/* 结果反馈 */
.result-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.result-card {
  width: 80%;
  background: #fff;
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  text-align: center;
}

.result-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.result-icon.correct {
  color: #4caf50;
}

.result-icon.wrong {
  color: #f44336;
}

.result-word {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.result-phonetic {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.result-translation {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 30rpx;
}

.result-your-answer {
  font-size: 26rpx;
  color: #f44336;
  margin-bottom: 30rpx;
}

.next-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 完成页面 */
.complete-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.complete-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.complete-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2e7d32;
  margin-bottom: 40rpx;
}

.stats-card {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.stat-row {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.stat-row:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 30rpx;
  color: #666;
}

.stat-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.accuracy {
  color: #2e7d32;
  font-size: 40rpx;
}

.action-btns {
  width: 100%;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.action-btn.primary {
  background: linear-gradient(135deg, #43a047 0%, #2e7d32 100%);
  color: #fff;
}

.action-btn.secondary {
  background: #fff;
  color: #2e7d32;
  border: 2rpx solid #2e7d32;
}

/* 加载中 */
.loading {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.loading-text {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #666;
}
