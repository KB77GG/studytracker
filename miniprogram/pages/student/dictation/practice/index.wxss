/* Pages Dictation Practice Styles */

.practice-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 30rpx;
  box-sizing: border-box;
}

/* Header */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.header-right{
  display:flex;
  align-items:center;
  gap:16rpx;
}

.book-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #2c3e50;
  max-width: 60%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.progress-info {
  font-size: 28rpx;
  font-weight: bold;
  color: #20756F;
  background: rgba(54, 165, 157, 0.12);
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

.timer-pill{
  padding: 6rpx 16rpx;
  background: #EAF6F4;
  color: #20756F;
  border-radius: 30rpx;
  font-weight: 600;
  font-size: 24rpx;
}

/* Card */
.word-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
}

.word-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 8rpx;
  background: linear-gradient(90deg, #36A59D, #20756F);
}

/* Play Button */
.play-btn {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #36A59D 0%, #20756F 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.3);
  transition: all 0.2s ease;
}

.play-btn:active {
  transform: scale(0.95);
  box-shadow: 0 5rpx 15rpx rgba(102, 126, 234, 0.2);
}

.play-icon {
  width: 0;
  height: 0;
  border-top: 25rpx solid transparent;
  border-bottom: 25rpx solid transparent;
  border-left: 45rpx solid #fff;
  margin-left: 10rpx;
}

.play-hint {
  font-size: 28rpx;
  color: #909399;
  margin-bottom: 40rpx;
}

.play-controls {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.mini-btn {
  background: #fff;
  border: 2rpx solid #dcdfe6;
  color: #606266;
  border-radius: 999rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.switch-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #606266;
  font-size: 26rpx;
}

/* Input Area */
.input-area {
  width: 100%;
  margin-bottom: 20rpx;
}

.word-input {
  width: 100%;
  height: 100rpx;
  background: #f4f6f8;
  border-radius: 16rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #2c3e50;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
}

.word-input:focus {
  background: #fff;
  border-color: #20756F;
  box-shadow: 0 0 0 6rpx rgba(54, 165, 157, 0.12);
}

.word-input.correct {
  border-color: #67C23A;
  color: #67C23A;
  background: rgba(103, 194, 58, 0.1);
}

.word-input.incorrect {
  border-color: #F56C6C;
  color: #F56C6C;
  background: rgba(245, 108, 108, 0.1);
}

/* Result Feedback */
.result-feedback {
  width: 100%;
  margin-top: 30rpx;
  padding: 30rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  text-align: left;
  animation: fadeIn 0.3s ease;
}

.correct-word {
  font-size: 48rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 10rpx;
  display: block;
}

.phonetic {
  font-size: 28rpx;
  color: #909399;
  margin-right: 20rpx;
  font-family: Arial, sans-serif;
}

.translation {
  font-size: 30rpx;
  color: #606266;
  line-height: 1.5;
  display: block;
  margin-top: 10rpx;
}

.compare-block {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx solid #f0f1f5;
}

.answer-row {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.answer-row.wrong {
  color: #F56C6C;
}

.answer-row.correct {
  color: #67C23A;
}

/* Action Bar */
.action-bar {
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}

.submit-btn {
  width: 80%;
  height: 100rpx;
  background: #333;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.1);
}

.submit-btn.next {
  background: linear-gradient(135deg, #36A59D 0%, #20756F 100%);
  box-shadow: 0 8rpx 16rpx rgba(32, 117, 111, 0.18);
}

.submit-btn:active {
  transform: scale(0.98);
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}
