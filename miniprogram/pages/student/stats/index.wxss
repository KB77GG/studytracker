.container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 50rpx;
}

.header {
  margin-bottom: 40rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #2C8A82 0%, #1F6C65 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
  font-weight: bold;
}

.info-text {
  display: flex;
  flex-direction: column;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.level {
  font-size: 24rpx;
  color: #666;
  background: #e0e0e0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-top: 8rpx;
  align-self: flex-start;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  background: #f5f8f7;
  padding: 28rpx;
  border-radius: 18rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1rpx solid #e4eeeb;
}

.stat-card.fire .value { color: #fb8c00; }
.stat-card.time .value { color: #20756F; }

.icon-dot {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.icon-dot.fire { background: linear-gradient(135deg, #ffb74d, #fb8c00); box-shadow: 0 0 0 8rpx rgba(251,140,0,0.12); }
.icon-dot.time { background: linear-gradient(135deg, #36A59D, #20756F); box-shadow: 0 0 0 8rpx rgba(32,117,111,0.12); }

.value {
  font-size: 56rpx;
  font-weight: 800;
  font-family: 'DIN Alternate', 'Roboto Condensed', 'Montserrat', sans-serif;
  margin-bottom: 6rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.section {
  background: #fff;
  border-radius: 18rpx;
  padding: 28rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 8rpx 18rpx rgba(0,0,0,0.04);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

/* Chart */
.chart-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 360rpx;
  padding: 10rpx 6rpx 0 6rpx;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  height: 260rpx;
  display: flex;
  align-items: flex-end;
  margin-bottom: 10rpx;
}

.bar {
  width: 28rpx;
  background: linear-gradient(to top, #20756F 0%, #36A59D 100%);
  border-radius: 14rpx;
  transition: height 0.5s ease;
}

.day-label {
  font-size: 22rpx;
  color: #95a3aa;
}

/* Badges */
.badge-strip {
  white-space: nowrap;
  width: 100%;
  padding-bottom: 6rpx;
}

.badge-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: 18rpx 20rpx;
  background: linear-gradient(135deg, #f0f7ff, #e8f5e9);
  border-radius: 18rpx;
  margin-right: 16rpx;
  min-width: 160rpx;
  box-shadow: 0 6rpx 12rpx rgba(0,0,0,0.06);
}

.badge-icon {
  font-size: 52rpx;
  margin-bottom: 8rpx;
}

.badge-name {
  font-size: 26rpx;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 4rpx;
}

.badge-desc {
  font-size: 22rpx;
  color: #7a8a90;
}

.logout-section {
  margin-top: 60rpx;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-unbind {
  background: #fff;
  color: #ff9800;
  border: 1rpx solid #ff9800;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding: 18rpx 0;
}

.btn-logout {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
  border-radius: 50rpx;
  font-size: 30rpx;
  padding: 20rpx 0;
}
