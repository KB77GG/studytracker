.page {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24rpx;
  box-sizing: border-box;
}

.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 700;
  color: #2c3e50;
}

.count {
  font-size: 26rpx;
  color: #909399;
}

.empty {
  margin-top: 80rpx;
  text-align: center;
  color: #909399;
}

.list {
  max-height: calc(100vh - 220rpx);
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.05);
  margin-bottom: 16rpx;
}

.card-header {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.word {
  font-size: 32rpx;
  font-weight: 700;
  color: #2c3e50;
}

.phonetic {
  font-size: 24rpx;
  color: #909399;
}

.trans {
  margin-top: 8rpx;
  font-size: 28rpx;
  color: #606266;
}

.card-actions {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
}

button.ghost {
  background: #EAF6F4;
  color: #20756F;
  border: 1px solid #c8e8e3;
}

button.danger {
  background: #fdecea;
  color: #d9534f;
  border: 1px solid #f5c6cb;
}

.footer {
  margin-top: 20rpx;
}

.clear-btn {
  width: 100%;
  background: #f5f5f5;
  color: #606266;
  border-radius: 12rpx;
}
