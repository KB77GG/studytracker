.container {
  min-height: 100vh;
  padding: 20px 16px 32px;
  background: #f6f8fa;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  gap: 4px;
  margin-bottom: 16px;
}

.title {
  font-size: 20px;
  font-weight: 700;
  color: #0f766e;
}

.subtitle {
  font-size: 12px;
  color: #64748b;
}

.card {
  background: #fff;
  border-radius: 12px;
  padding: 14px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  margin-bottom: 16px;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 0;
  border-bottom: 1px dashed #e2e8f0;
}

.info-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 12px;
  color: #64748b;
}

.value {
  font-size: 13px;
  color: #0f172a;
  font-weight: 600;
  text-align: right;
}

.form {
  background: #fff;
  border-radius: 12px;
  padding: 14px;
  border: 1px solid #e2e8f0;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  margin-bottom: 14px;
}

.form-label {
  font-size: 14px;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 8px;
  display: block;
}

.textarea {
  width: 100%;
  min-height: 160px;
  background: #f8fafc;
  border-radius: 10px;
  padding: 10px;
  box-sizing: border-box;
  font-size: 14px;
  color: #0f172a;
}

.section-textarea {
  min-height: 100px;
}

.counter {
  text-align: right;
  font-size: 11px;
  color: #94a3b8;
  margin-top: 6px;
}

.image-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.image-tip {
  font-size: 11px;
  color: #94a3b8;
}

.image-uploader {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.image-preview {
  display: flex;
  align-items: center;
  gap: 10px;
}

.preview-img {
  width: 96px;
  height: 96px;
  border-radius: 10px;
  border: 1px solid #e2e8f0;
  background: #f8fafc;
}

.remove-btn {
  background: #fee2e2;
  color: #b91c1c;
  border-radius: 12px;
}

.upload-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 12px;
  align-self: flex-start;
}

.submit-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 16px;
}
