.page {
  min-height: 100vh;
  background: #f6f8fa;
  padding: 16px 16px 90px;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 12px;
}

.header-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.header-row.secondary {
  gap: 10px;
}

.title {
  font-size: 20px;
  font-weight: 700;
  color: #0f766e;
}

.sub-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 14px;
  padding: 0 10px;
  font-size: 12px;
  height: 28px;
  line-height: 28px;
}

.sub-btn[disabled] {
  background: #94a3b8;
  color: #f8fafc;
}

.range-switch {
  display: flex;
  gap: 6px;
}

.range-btn {
  border: 1px solid #cfe7e2;
  color: #0f766e;
  border-radius: 12px;
  padding: 0 10px;
  background: #fff;
  font-size: 11px;
  height: 26px;
  line-height: 26px;
}

.range-btn.active {
  background: #0f766e;
  color: #fff;
  border-color: #0f766e;
}

.range-switch.segmented {
  background: #ecf7f5;
  padding: 2px;
  border-radius: 14px;
  border: 1px solid #d5ece8;
}

.range-switch.segmented .range-btn {
  border: none;
  background: transparent;
  color: #0f766e;
  padding: 0 12px;
  height: 26px;
  line-height: 26px;
}

.range-switch.segmented .range-btn.active {
  background: #0f766e;
  color: #fff;
  border-radius: 12px;
}

.bind-panel {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  margin-bottom: 12px;
}

.bind-title {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
  margin-bottom: 4px;
}

.bind-desc {
  font-size: 12px;
  color: #64748b;
  margin-bottom: 10px;
}

.bind-form {
  display: flex;
  gap: 8px;
  align-items: center;
}

.bind-input {
  flex: 1;
  border: 1px solid #e2e8f0;
  background: #f8fafc;
  border-radius: 10px;
  padding: 6px 10px;
  font-size: 14px;
}

.bind-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 14px;
  padding: 0 12px;
}

.loading, .empty {
  text-align: center;
  color: #94a3b8;
  padding: 24px 0;
}

.group {
  margin-bottom: 16px;
}

.group-title {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.group-date {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
}

.group-count {
  font-size: 12px;
  color: #64748b;
  background: #e2f3f1;
  padding: 2px 8px;
  border-radius: 999px;
}

.card {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  border-left: 4px solid #0f766e;
  margin-bottom: 10px;
}

.card-head {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.course-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  flex-shrink: 0;
}

.course-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
  flex: 1;
}

.time-pill {
  font-size: 12px;
  font-weight: 600;
  padding: 4px 8px;
  border-radius: 999px;
  flex-shrink: 0;
}

.meta-row {
  display: flex;
  gap: 12px;
}

.meta-item {
  flex: 1;
  background: #f8fafc;
  border-radius: 10px;
  padding: 8px;
}

.meta-label {
  font-size: 12px;
  color: #64748b;
  display: block;
  margin-bottom: 4px;
}

.meta-value {
  font-size: 14px;
  color: #0f172a;
  font-weight: 600;
}

.view-switch {
  display: flex;
  gap: 4px;
}

.switch-btn {
  border: 1px solid #d0e7e2;
  color: #0f766e;
  border-radius: 12px;
  padding: 0 6px;
  background: #fff;
  font-size: 11px;
  height: 26px;
  line-height: 26px;
}

.switch-btn.active {
  background: #0f766e;
  color: #fff;
  border-color: #0f766e;
}

.calendar-view {
  margin-top: 4px;
}

.month-header {
  display: flex;
  justify-content: center;
  margin-bottom: 6px;
}

.month-title {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
}

.week-header {
  display: grid;
  grid-template-columns: repeat(7, minmax(0, 1fr));
  gap: 4px;
  margin-bottom: 6px;
  padding: 0 4px;
}

.week-cell {
  text-align: center;
  font-size: 11px;
  color: #64748b;
}

.month-grid {
  display: grid;
  grid-template-columns: repeat(7, minmax(0, 1fr));
  gap: 4px;
  background: #fff;
  padding: 6px;
  border-radius: 14px;
  border: 1px solid #e2e8f0;
  margin-bottom: 12px;
}

.month-cell {
  position: relative;
  border-radius: 10px;
  padding: 6px 2px;
  text-align: center;
  background: #f8fafc;
  border: 1px solid transparent;
  min-height: 54px;
  min-width: 0;
}

.month-cell.placeholder {
  background: transparent;
  border-color: transparent;
}

.month-cell.placeholder .cell-date,
.month-cell.placeholder .calendar-dots,
.month-cell.placeholder .calendar-count {
  visibility: hidden;
}

.month-cell.today {
  border-color: transparent;
  background: #f0fdf9;
}

.month-cell.today .cell-date {
  color: #0f766e;
}

.month-cell.active {
  background: #e6f4f1;
  border-color: #0f766e;
}

.cell-date {
  font-size: 13px;
  font-weight: 700;
  color: #0f172a;
  display: block;
}

.calendar-dots {
  display: flex;
  gap: 3px;
  justify-content: center;
  margin-top: 6px;
}

.calendar-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
}

.calendar-count {
  position: absolute;
  top: 2px;
  right: 2px;
  font-size: 9px;
  background: #0f766e;
  color: #fff;
  padding: 0 4px;
  border-radius: 999px;
}

@media (max-width: 360px) {
  .month-grid {
    gap: 3px;
    padding: 4px;
  }

  .month-cell {
    padding: 4px 1px;
  }

  .week-cell {
    font-size: 9px;
  }

  .cell-date {
    font-size: 11px;
  }
}

.day-detail {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 8px;
}

.detail-date {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
}

.detail-count {
  font-size: 12px;
  color: #64748b;
  background: #e2f3f1;
  padding: 2px 8px;
  border-radius: 999px;
}

.detail-card {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  border: 1px solid #e2e8f0;
  border-left: 4px solid #0f766e;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
}

.detail-time {
  font-size: 13px;
  font-weight: 700;
  margin-bottom: 6px;
}

.detail-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
  display: block;
  margin-bottom: 4px;
}

.detail-meta {
  font-size: 12px;
  color: #64748b;
  display: block;
}

.bottom-nav {
  position: fixed;
  left: 16px;
  right: 16px;
  bottom: 20px;
  display: flex;
  gap: 12px;
  background: #fff;
  border-radius: 18px;
  padding: 10px;
  border: 1px solid #e2e8f0;
  box-shadow: 0 8px 20px rgba(15, 118, 110, 0.1);
}

.nav-item {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  border-radius: 12px;
  font-size: 14px;
  color: #64748b;
}

.nav-item.active {
  background: #0f766e;
  color: #fff;
  font-weight: 700;
}

.detail-footer,
.card-footer {
  margin-top: 10px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.feedback-tag {
  font-size: 11px;
  color: #64748b;
  background: #f1f5f9;
  padding: 2px 8px;
  border-radius: 999px;
}

.feedback-tag.done {
  color: #0f766e;
  background: #dcfce7;
}

.feedback-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 12px;
  padding: 0 10px;
}

.feedback-btn.done {
  background: #1d4ed8;
}
