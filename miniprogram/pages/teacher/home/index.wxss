.page {
  min-height: 100vh;
  background: #f6f8fa;
  padding: 16px;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.title {
  font-size: 20px;
  font-weight: 700;
  color: #0f766e;
}

.actions {
  display: flex;
  gap: 8px;
  align-items: center;
}

.sub-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 16px;
  padding: 0 12px;
}

.sub-btn[disabled] {
  background: #94a3b8;
  color: #f8fafc;
}

.range-switch {
  display: flex;
  gap: 6px;
}

.range-btn {
  border: 1px solid #d0e7e2;
  color: #0f766e;
  border-radius: 14px;
  padding: 0 10px;
  background: #fff;
}

.range-btn.active {
  background: #0f766e;
  color: #fff;
  border-color: #0f766e;
}

.bind-panel {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  margin-bottom: 12px;
}

.bind-title {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
  margin-bottom: 4px;
}

.bind-desc {
  font-size: 12px;
  color: #64748b;
  margin-bottom: 10px;
}

.bind-form {
  display: flex;
  gap: 8px;
  align-items: center;
}

.bind-input {
  flex: 1;
  border: 1px solid #e2e8f0;
  background: #f8fafc;
  border-radius: 10px;
  padding: 6px 10px;
  font-size: 14px;
}

.bind-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 14px;
  padding: 0 12px;
}

.loading, .empty {
  text-align: center;
  color: #94a3b8;
  padding: 24px 0;
}

.group {
  margin-bottom: 16px;
}

.group-title {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.group-date {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
}

.group-count {
  font-size: 12px;
  color: #64748b;
  background: #e2f3f1;
  padding: 2px 8px;
  border-radius: 999px;
}

.card {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  border-left: 4px solid #0f766e;
  margin-bottom: 10px;
}

.card-head {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.course-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  flex-shrink: 0;
}

.course-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
  flex: 1;
}

.time-pill {
  font-size: 12px;
  font-weight: 600;
  padding: 4px 8px;
  border-radius: 999px;
  flex-shrink: 0;
}

.meta-row {
  display: flex;
  gap: 12px;
}

.meta-item {
  flex: 1;
  background: #f8fafc;
  border-radius: 10px;
  padding: 8px;
}

.meta-label {
  font-size: 12px;
  color: #64748b;
  display: block;
  margin-bottom: 4px;
}

.meta-value {
  font-size: 14px;
  color: #0f172a;
  font-weight: 600;
}

.view-switch {
  display: flex;
  gap: 6px;
  margin-bottom: 12px;
}

.switch-btn {
  border: 1px solid #d0e7e2;
  color: #0f766e;
  border-radius: 14px;
  padding: 0 10px;
  background: #fff;
}

.switch-btn.active {
  background: #0f766e;
  color: #fff;
  border-color: #0f766e;
}

.calendar-view {
  margin-top: 4px;
}

.calendar-row {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 6px;
  background: #fff;
  padding: 8px;
  border-radius: 14px;
  border: 1px solid #e2e8f0;
  margin-bottom: 12px;
}

.calendar-day {
  position: relative;
  border-radius: 12px;
  padding: 8px 4px;
  text-align: center;
  background: #f8fafc;
  border: 1px solid transparent;
}

.calendar-day.today {
  border-color: #0f766e;
}

.calendar-day.active {
  background: #e6f4f1;
  border-color: #0f766e;
}

.calendar-weekday {
  font-size: 11px;
  color: #64748b;
  display: block;
}

.calendar-date {
  font-size: 16px;
  font-weight: 700;
  color: #0f172a;
  margin-top: 2px;
  display: block;
}

.calendar-dots {
  display: flex;
  gap: 3px;
  justify-content: center;
  margin-top: 6px;
}

.calendar-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
}

.calendar-count {
  position: absolute;
  top: 4px;
  right: 4px;
  font-size: 10px;
  background: #0f766e;
  color: #fff;
  padding: 0 4px;
  border-radius: 999px;
}

.day-detail {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.detail-header {
  display: flex;
  align-items: center;
  gap: 8px;
}

.detail-date {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
}

.detail-count {
  font-size: 12px;
  color: #64748b;
  background: #e2f3f1;
  padding: 2px 8px;
  border-radius: 999px;
}

.detail-card {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  border: 1px solid #e2e8f0;
  border-left: 4px solid #0f766e;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
}

.detail-time {
  font-size: 13px;
  font-weight: 700;
  margin-bottom: 6px;
}

.detail-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
  display: block;
  margin-bottom: 4px;
}

.detail-meta {
  font-size: 12px;
  color: #64748b;
  display: block;
}
