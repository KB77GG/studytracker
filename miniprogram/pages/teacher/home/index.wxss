.page {
  min-height: 100vh;
  background: #f6f8fa;
  padding: 16px;
  box-sizing: border-box;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.title {
  font-size: 20px;
  font-weight: 700;
  color: #0f766e;
}

.actions {
  display: flex;
  gap: 8px;
  align-items: center;
}

.sub-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 16px;
  padding: 0 12px;
}

.sub-btn[disabled] {
  background: #94a3b8;
  color: #f8fafc;
}

.range-switch {
  display: flex;
  gap: 6px;
}

.range-btn {
  border: 1px solid #d0e7e2;
  color: #0f766e;
  border-radius: 14px;
  padding: 0 10px;
  background: #fff;
}

.range-btn.active {
  background: #0f766e;
  color: #fff;
  border-color: #0f766e;
}

.bind-panel {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  margin-bottom: 12px;
}

.bind-title {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
  margin-bottom: 4px;
}

.bind-desc {
  font-size: 12px;
  color: #64748b;
  margin-bottom: 10px;
}

.bind-form {
  display: flex;
  gap: 8px;
  align-items: center;
}

.bind-input {
  flex: 1;
  border: 1px solid #e2e8f0;
  background: #f8fafc;
  border-radius: 10px;
  padding: 6px 10px;
  font-size: 14px;
}

.bind-btn {
  background: #0f766e;
  color: #fff;
  border-radius: 14px;
  padding: 0 12px;
}

.loading, .empty {
  text-align: center;
  color: #94a3b8;
  padding: 24px 0;
}

.group {
  margin-bottom: 16px;
}

.group-title {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.group-date {
  font-size: 14px;
  font-weight: 700;
  color: #0f766e;
}

.group-count {
  font-size: 12px;
  color: #64748b;
  background: #e2f3f1;
  padding: 2px 8px;
  border-radius: 999px;
}

.card {
  background: #fff;
  border-radius: 12px;
  padding: 12px;
  box-shadow: 0 4px 10px rgba(15, 118, 110, 0.08);
  border: 1px solid #e2e8f0;
  border-left: 4px solid #0f766e;
  margin-bottom: 10px;
}

.card-head {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-bottom: 8px;
}

.course-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  flex-shrink: 0;
}

.course-title {
  font-size: 15px;
  font-weight: 700;
  color: #0f172a;
  flex: 1;
}

.time-pill {
  font-size: 12px;
  font-weight: 600;
  padding: 4px 8px;
  border-radius: 999px;
  flex-shrink: 0;
}

.meta-row {
  display: flex;
  gap: 12px;
}

.meta-item {
  flex: 1;
  background: #f8fafc;
  border-radius: 10px;
  padding: 8px;
}

.meta-label {
  font-size: 12px;
  color: #64748b;
  display: block;
  margin-bottom: 4px;
}

.meta-value {
  font-size: 14px;
  color: #0f172a;
  font-weight: 600;
}

.view-switch {
  display: flex;
  gap: 6px;
  margin-bottom: 12px;
}

.switch-btn {
  border: 1px solid #d0e7e2;
  color: #0f766e;
  border-radius: 14px;
  padding: 0 10px;
  background: #fff;
}

.switch-btn.active {
  background: #0f766e;
  color: #fff;
  border-color: #0f766e;
}

.week-view {
  margin-top: 4px;
}

.week-scroll {
  width: 100%;
}

.week-row {
  display: flex;
  align-items: flex-start;
}

.time-col {
  width: 100px;
  flex-shrink: 0;
  margin-right: 8px;
}

.day-col {
  width: 220px;
  flex-shrink: 0;
  margin-right: 8px;
}

.day-header {
  text-align: center;
  font-size: 12px;
  color: #0f766e;
  background: #e8f5f3;
  padding: 6px 4px;
  border-radius: 10px;
  margin-bottom: 6px;
  font-weight: 600;
}

.time-header {
  background: #f1f5f9;
  color: #64748b;
}

.time-slot {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 11px;
  color: #64748b;
  border-bottom: 1px solid #e2e8f0;
  box-sizing: border-box;
}

.day-grid {
  position: relative;
  background: #fff;
  border: 1px solid #e2e8f0;
  border-radius: 12px;
  overflow: hidden;
}

.grid-line {
  border-bottom: 1px dashed #e2e8f0;
  box-sizing: border-box;
}

.schedule-block {
  position: absolute;
  left: 8px;
  right: 8px;
  border-radius: 12px;
  padding: 6px;
  box-shadow: 0 6px 12px rgba(15, 118, 110, 0.15);
  display: flex;
  flex-direction: column;
  gap: 2px;
  box-sizing: border-box;
}

.block-time {
  font-size: 11px;
  font-weight: 700;
  color: #0f172a;
}

.block-title {
  font-size: 12px;
  font-weight: 700;
  color: #0f172a;
}

.block-meta {
  font-size: 11px;
  color: #334155;
}

.feedback-btn {
  margin-top: 4px;
  background: rgba(15, 118, 110, 0.18);
  color: #0f766e;
  border-radius: 10px;
  font-size: 11px;
  padding: 0 6px;
}
