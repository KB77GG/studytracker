.container {
  padding: 30rpx;
  background: #f7f7fa;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.chart-card, .list-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #277C78;
  padding-left: 16rpx;
}

.chart-container {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 300rpx;
  padding-top: 20rpx;
}

.bar-group {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.bar-wrapper {
  height: 240rpx;
  width: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  margin-bottom: 10rpx;
}

.bar {
  width: 20rpx;
  border-radius: 10rpx 10rpx 0 0;
  transition: height 0.5s ease;
}

.date-label {
  font-size: 20rpx;
  color: #999;
}

.data-list {
  width: 100%;
}

.list-header, .list-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-header {
  font-weight: bold;
  color: #666;
  font-size: 26rpx;
}

.list-item {
  color: #333;
  font-size: 28rpx;
}

.list-item:last-child {
  border-bottom: none;
}

.col {
  flex: 1;
  text-align: center;
}

.good { color: #4caf50; font-weight: bold; }
.fair { color: #ff9800; font-weight: bold; }
.poor { color: #f44336; font-weight: bold; }
