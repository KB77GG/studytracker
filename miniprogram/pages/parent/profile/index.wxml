<view class="container">
  <view class="user-card">
    <view class="avatar">
      <image src="/images/tabbar/profile_active.png" mode="aspectFit"></image>
    </view>
    <view class="info">
      <view class="name">{{userInfo.display_name || '家长'}}</view>
      <view class="role">家长账号</view>
    </view>
  </view>

  <view class="action-list">
    <view class="action-item" bindtap="handleUnbind">
      <text>解除微信绑定</text>
      <text class="arrow">></text>
    </view>
    <view class="action-item logout" bindtap="handleLogout">
      <text>退出登录</text>
      <text class="arrow">></text>
    </view>
  </view>
</view>
