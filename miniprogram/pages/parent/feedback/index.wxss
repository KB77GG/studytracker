.container {
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  background: #f7f7fa;
}

.header {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 800;
  color: #333;
}

.subtitle {
  font-size: 24rpx;
  color: #777;
}

.loading,
.empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.feedback-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid rgba(0, 0, 0, 0.04);
  margin-bottom: 20rpx;
}

.feedback-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.feedback-course {
  font-size: 30rpx;
  font-weight: 700;
  color: #0f172a;
}

.feedback-date {
  font-size: 22rpx;
  color: #94a3b8;
}

.feedback-time {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 4rpx;
}

.feedback-teacher {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.feedback-text {
  font-size: 26rpx;
  color: #0f172a;
  line-height: 1.6;
  white-space: pre-wrap;
}
