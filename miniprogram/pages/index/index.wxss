/* 页面容器：深色渐变背景 */
/* 页面容器：清新晨光渐变背景 */
.container {
  min-height: 100vh;
  /* 之前的深色：background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
  /* 新的清新蓝绿渐变，呼应 Sage Logo */
  background: linear-gradient(180deg, #e0f2f1 0%, #80deea 100%); 
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰圆 - 改为白色半透明，增加通透感 */
.bg-circle-1 {
  position: absolute;
  top: -100rpx;
  left: -100rpx;
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.8) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  filter: blur(20rpx);
  animation: float 10s infinite ease-in-out;
}

.bg-circle-2 {
  position: absolute;
  bottom: 0;
  right: -100rpx;
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.6) 0%, rgba(255,255,255,0) 70%);
  border-radius: 50%;
  filter: blur(30rpx);
  animation: float 8s infinite ease-in-out reverse;
}

@keyframes float {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(20rpx, 20rpx); }
}

/* 品牌区域 */
.brand-area {
  margin-top: 100rpx; /* 稍微上移 */
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #00695c; /* 改为深青色文字，在浅色背景上更清晰 */
  margin-bottom: 40rpx; /* 拉近与卡片的距离 */
  z-index: 1;
  animation: fadeInDown 0.8s ease-out;
}

.brand-logo {
  display: none; /* 隐藏图片 */
}

.app-name {
  font-size: 60rpx;
  font-weight: 900;
  color: #004d40;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.sub-name {
  font-size: 28rpx;
  color: #00695c;
  opacity: 0.8;
  margin-bottom: 30rpx;
  font-style: italic;
  letter-spacing: 1rpx;
}

.slogan {
  font-size: 30rpx;
  opacity: 0.6;
  font-weight: 500;
  letter-spacing: 6rpx;
  color: #004d40;
  text-shadow: none;
}

/* 主卡片 */
.main-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 48rpx;
  padding: 60rpx 40rpx;
  /* 更轻盈的投影 */
  box-shadow: 0 20rpx 60rpx rgba(0, 105, 92, 0.1);
  z-index: 10;
  animation: fadeInUp 0.8s ease-out 0.2s backwards;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 1. 登录引导 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.h1 {
  font-size: 44rpx; /* 更大 */
  font-weight: 800;
  color: #1a1a1a;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.p {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 1rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #42d392 0%, #647eff 100%); /* 蓝绿渐变，更有科技感 */
  color: white;
  width: 100%;
  height: 110rpx; /* 稍微加高 */
  border-radius: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 20rpx 40rpx rgba(66, 211, 146, 0.3);
  transition: all 0.2s;
  letter-spacing: 2rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 10rpx 20rpx rgba(66, 211, 146, 0.2);
}

.wechat-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

/* 隐私协议 */
.privacy-section {
  width: 100%;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.privacy-label {
  display: flex;
  align-items: flex-start;
}

.privacy-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-left: 10rpx;
  flex: 1;
}

.link {
  color: #00695c;
  display: inline;
}

.btn-disabled {
  opacity: 0.6;
  filter: grayscale(0.5);
  pointer-events: none; /* 禁止点击 */
}

/* 2. 角色选择 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  display: block;
}

.role-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.role-item {
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.role-item.student { background: #eef2ff; color: #4f46e5; }
.role-item.parent { background: #fff7ed; color: #ea580c; }

.role-item:active {
  transform: scale(0.96);
}

.role-icon-bg {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.role-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 3. 绑定表单 */
.section-subtitle {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-bottom: 50rpx;
  margin-top: -30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
  margin-left: 10rpx;
}

.input-field {
  background: #f5f7fa;
  height: 90rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 50rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: #667eea;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* Debug */
.debug-area {
  margin-top: 60rpx;
  opacity: 0.6;
}

.debug-link {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  text-decoration: underline;
}

/* 动画 */
@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
