/* 页面容器：深色渐变背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #1a2a6c, #b21f1f, #fdbb2d); /* 经典的深海夕阳渐变 */
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); /* 或者清新的蓝天渐变，这里选深蓝更有质感 */
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); /* 最终决定：深紫蓝渐变，稳重且现代 */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 40rpx;
  position: relative;
  overflow: hidden;
}

/* 背景装饰圆 */
.bg-circle-1 {
  position: absolute;
  top: -100rpx;
  left: -100rpx;
  width: 400rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  filter: blur(40rpx);
}

.bg-circle-2 {
  position: absolute;
  bottom: -50rpx;
  right: -50rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  filter: blur(30rpx);
}

/* 品牌区域 */
.brand-area {
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;
  margin-bottom: 60rpx;
  z-index: 1;
  animation: fadeInDown 0.8s ease-out;
}

.brand-logo {
  width: 460rpx;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.15);
}

.slogan {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 300;
  letter-spacing: 4rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.2);
}

/* 主卡片 */
.main-card {
  width: 100%;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  z-index: 10;
  animation: fadeInUp 0.8s ease-out 0.2s backwards;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* 1. 登录引导 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.h1 {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 16rpx;
}

.p {
  font-size: 28rpx;
  color: #666;
}

.btn-primary {
  background: #07c160;
  color: white;
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(7, 193, 96, 0.3);
  transition: all 0.2s;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(7, 193, 96, 0.2);
}

.wechat-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

/* 2. 角色选择 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  display: block;
}

.role-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.role-item {
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.role-item.student { background: #eef2ff; color: #4f46e5; }
.role-item.parent { background: #fff7ed; color: #ea580c; }

.role-item:active {
  transform: scale(0.96);
}

.role-icon-bg {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.role-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 3. 绑定表单 */
.section-subtitle {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-bottom: 50rpx;
  margin-top: -30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
  margin-left: 10rpx;
}

.input-field {
  background: #f5f7fa;
  height: 90rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 50rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: #667eea;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

/* Debug */
.debug-area {
  margin-top: 60rpx;
  opacity: 0.6;
}

.debug-link {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  text-decoration: underline;
}

/* 动画 */
@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}
