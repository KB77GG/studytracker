/* 页面容器：深色渐变背景 */
/* 页面容器：清新晨光渐变背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #e9f6f4 0%, #d2efe9 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.hero {
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  color: #0e5c54;
}

.app-name {
  font-size: 70rpx;
  font-weight: 800;
  letter-spacing: 1rpx;
  font-family: 'Poppins', 'Montserrat', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.sub-name {
  font-size: 30rpx;
  color: #1c8b7f;
  opacity: 0.9;
  font-style: italic;
}

.slogan {
  font-size: 30rpx;
  color: #1f6c65;
  opacity: 0.75;
  letter-spacing: 4rpx;
  margin-top: 10rpx;
}

/* 主卡片 */
.main-card {
  width: 100%;
  background: #fff;
  border-radius: 52rpx;
  padding: 60rpx 40rpx 52rpx;
  box-shadow: 0 18rpx 45rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
  animation: fadeInUp 0.6s ease-out 0.1s backwards;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 10rpx;
  justify-content: center;
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 1. 登录引导 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  text-align: center;
  margin-bottom: 60rpx;
}

.h1 {
  font-size: 44rpx; /* 更大 */
  font-weight: 800;
  color: #1a1a1a;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.p {
  font-size: 28rpx;
  color: #666;
  letter-spacing: 1rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #20756F 0%, #36A59D 100%);
  color: white;
  width: 100%;
  height: 110rpx; /* 稍微加高 */
  border-radius: 55rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 20rpx 40rpx rgba(66, 211, 146, 0.3);
  transition: all 0.2s;
  letter-spacing: 2rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 10rpx 20rpx rgba(66, 211, 146, 0.2);
}

.welcome-intro {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.intro-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.intro-icon {
  font-size: 40rpx;
}

.intro-title {
  font-size: 36rpx;
  font-weight: 800;
  color: #1a1a1a;
  letter-spacing: 1rpx;
}

.feature-list {
  margin: 24rpx 0 30rpx;
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fff;
  border-radius: 26rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 24rpx rgba(0,0,0,0.05);
}

.feature-texts {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.feature-title {
  font-size: 34rpx;
  font-weight: 800;
  color: #1f2d3d;
}

.feature-desc {
  font-size: 26rpx;
  color: #7a8a90;
}

.feature-emoji {
  font-size: 40rpx;
  width: 60rpx;
  text-align: center;
}

/* 隐私协议 */
.privacy-section {
  width: 100%;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.privacy-label {
  display: flex;
  align-items: flex-start;
}

.privacy-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-left: 10rpx;
  flex: 1;
}

.link {
  color: #00695c;
  display: inline;
}

.btn-disabled {
  opacity: 0.6;
  filter: grayscale(0.5);
  pointer-events: none; /* 禁止点击 */
}

/* 2. 角色选择 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  display: block;
}

.role-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.role-item {
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.role-item.student { background: #eef2ff; color: #4f46e5; }
.role-item.parent { background: #fff7ed; color: #ea580c; }

.role-item:active {
  transform: scale(0.96);
}

.role-icon-bg {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.role-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 3. 绑定表单 */
.section-subtitle {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-bottom: 50rpx;
  margin-top: -30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
  margin-left: 10rpx;
}

.input-field {
  background: #f5f7fa;
  height: 90rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 50rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: #1F6C65;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(31, 108, 101, 0.2);
}

/* Debug */
.debug-area {
  margin-top: 60rpx;
  opacity: 0.6;
}

.debug-link {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  text-decoration: underline;
}

/* 动画 */
@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 欢迎引导页样式 */
.welcome-intro {
  padding: 40rpx 0;
  animation: fadeInUp 0.6s ease-out;
}

.intro-content {
  text-align: center;
}

.intro-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 60rpx;
}

.feature-list {
  margin-bottom: 60rpx;
  text-align: left;
}

.feature-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  transition: all 0.3s;
}

.feature-item:hover {
  background: #e9ecef;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.feature-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.5;
}

.btn-start {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #2C8A82 0%, #1F6C65 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(44, 138, 130, 0.25);
  border: none;
  margin-bottom: 20rpx;
}

.btn-start:active {
  transform: scale(0.98);
}

.tip-text {
  font-size: 22rpx;
  color: #999;
  display: block;
  text-align: center;
}

.btn-ghost {
  width: 100%;
  height: 80rpx;
  background: #f0f2f5;
  color: #4b5563;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-top: 12rpx;
  border: 1px solid #e5e7eb;
}

.btn-back {
  width: 100%;
  height: 80rpx;
  background: #f0f0f0;
  color: #666;
  border-radius: 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  border: none;
}

.preview-section {
  margin-top: 24rpx;
}
.preview-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
  margin: 16rpx 0 20rpx;
}
.preview-card {
  background: #f8fafc;
  border: 1px solid #e5e7eb;
  border-radius: 14rpx;
  padding: 16rpx;
}
.preview-title {
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 6rpx;
}
.preview-desc {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
}
