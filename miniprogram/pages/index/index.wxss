/* 页面容器：深色渐变背景 */
/* 页面容器：清新晨光渐变背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #eef7f6 0%, #e4f2ef 52%, #f7f9fb 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 28rpx 48rpx;
  position: relative;
  overflow: hidden;
}

.bg-circle-1,
.bg-circle-2 {
  position: absolute;
  border-radius: 999px;
  opacity: 0.8;
  z-index: 0;
}

.bg-circle-1 {
  width: 520rpx;
  height: 520rpx;
  background: rgba(25, 132, 123, 0.18);
  top: -220rpx;
  left: -180rpx;
}

.bg-circle-2 {
  width: 620rpx;
  height: 620rpx;
  background: rgba(92, 128, 255, 0.12);
  top: 220rpx;
  right: -260rpx;
}

.hero {
  margin-top: 96rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  color: #0e5c54;
  padding: 0 6rpx;
  z-index: 1;
}

.app-name {
  font-size: 68rpx;
  font-weight: 800;
  letter-spacing: 2rpx;
  font-family: "Avenir Next", "DIN Alternate", "Futura", "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
  text-align: center;
}

.sub-name {
  font-size: 24rpx;
  color: #1c8b7f;
  opacity: 0.75;
  letter-spacing: 2rpx;
  text-transform: uppercase;
  align-self: flex-end;
  text-align: right;
  width: 100%;
}

.slogan {
  font-size: 24rpx;
  color: #567c76;
  opacity: 0.68;
  letter-spacing: 2rpx;
  margin-top: 4rpx;
  align-self: flex-end;
  text-align: right;
  width: 100%;
}

.hero-confirm {
  margin-top: 82rpx;
}

.hero-confirm .app-name {
  font-size: 48rpx;
  color: #7a8a87;
  letter-spacing: 1rpx;
}

.hero-confirm .sub-name,
.hero-confirm .slogan {
  font-size: 20rpx;
  color: #9aa8a4;
  opacity: 0.7;
  letter-spacing: 1rpx;
}

/* 主卡片 */
.main-card {
  width: 100%;
  background: #fff;
  border-radius: 44rpx;
  padding: 52rpx 36rpx 46rpx;
  box-shadow: 0 24rpx 60rpx rgba(15, 118, 110, 0.08);
  border: 1rpx solid rgba(15, 118, 110, 0.08);
  z-index: 10;
  animation: fadeInUp 0.6s ease-out 0.1s backwards;
  min-height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 36rpx;
}

.confirm-mode .main-card {
  background: rgba(255, 255, 255, 0.78);
  box-shadow: none;
  border: 1rpx solid rgba(15, 118, 110, 0.06);
}

.card-header {
  display: flex;
  align-items: center;
  gap: 14rpx;
  margin-bottom: 10rpx;
  justify-content: center;
}

.card-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 1. 登录引导 */
.login-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome-text {
  text-align: center;
  margin-bottom: 48rpx;
}

.h1 {
  font-size: 42rpx;
  font-weight: 800;
  color: #12211f;
  display: block;
  margin-bottom: 14rpx;
  letter-spacing: 1rpx;
}

.p {
  font-size: 26rpx;
  color: #6b7c7a;
  letter-spacing: 0.5rpx;
}

.status-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2a3c3a;
  letter-spacing: 1rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #1f6c65 0%, #2a867f 100%);
  color: white;
  width: 100%;
  height: 96rpx;
  border-radius: 58rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 700;
  box-shadow: 0 12rpx 24rpx rgba(46, 168, 157, 0.2);
  transition: all 0.2s;
  letter-spacing: 1rpx;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 14rpx rgba(46, 168, 157, 0.16);
}

.welcome-intro {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.intro-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  padding-top: 18rpx;
}

.intro-title-wrap {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.intro-icon {
  font-size: 40rpx;
}

.intro-title {
  font-size: 38rpx;
  font-weight: 800;
  color: #12211f;
  letter-spacing: 1rpx;
}

.feature-list {
  margin: 10rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  background: #fbfefe;
  border-radius: 24rpx;
  padding: 22rpx 26rpx;
  border: 1rpx solid rgba(15, 118, 110, 0.04);
  box-shadow: 0 4rpx 12rpx rgba(15, 118, 110, 0.03);
  border-left: 6rpx solid #d5efe9;
}

.feature-item:nth-child(2) {
  border-left-color: #eef2ff;
}

.feature-item:nth-child(3) {
  border-left-color: #fff7ec;
}

.feature-item:nth-child(4) {
  border-left-color: #fbeef1;
}

.feature-texts {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-top: -2rpx;
}

.feature-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2d3d;
}

.feature-desc {
  font-size: 24rpx;
  color: #a3b0b5;
}

.feature-emoji {
  font-size: 32rpx;
  width: 64rpx;
  height: 64rpx;
  text-align: center;
  border-radius: 18rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 18rpx rgba(0, 0, 0, 0.06);
}

/* 隐私协议 */
.privacy-section {
  width: 100%;
  margin-bottom: 20rpx;
  padding: 0 6rpx;
}

.privacy-label {
  display: flex;
  align-items: flex-start;
}

.privacy-text {
  font-size: 22rpx;
  color: #a0aeb3;
  line-height: 1.5;
  margin-left: 8rpx;
  flex: 1;
}

.link {
  color: #1f6c65;
  display: inline;
}

.btn-disabled {
  opacity: 1;
  filter: none;
}

/* 2. 角色选择 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
  display: block;
}

.role-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.role-item {
  background: #f8f9fa;
  border-radius: 30rpx;
  padding: 40rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.role-item.student { background: #eef2ff; color: #4f46e5; }
.role-item.parent { background: #fff7ed; color: #ea580c; }

.role-item:active {
  transform: scale(0.96);
}

.role-icon-bg {
  font-size: 60rpx;
  margin-bottom: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.role-label {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.role-desc {
  font-size: 22rpx;
  opacity: 0.7;
}

/* 3. 绑定表单 */
.section-subtitle {
  font-size: 26rpx;
  color: #999;
  text-align: center;
  display: block;
  margin-bottom: 50rpx;
  margin-top: -30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
  margin-left: 10rpx;
}

.input-field {
  background: #f5f7fa;
  height: 90rpx;
  border-radius: 20rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
}

.action-buttons {
  display: flex;
  gap: 30rpx;
  margin-top: 50rpx;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 90rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.btn-cancel {
  background: #f0f0f0;
  color: #666;
}

.btn-confirm {
  background: #1F6C65;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(31, 108, 101, 0.2);
}

/* Debug */
.debug-area {
  margin-top: 60rpx;
  opacity: 0.6;
}

.debug-link {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  text-decoration: underline;
}

/* 动画 */
@keyframes fadeInDown {
  from { opacity: 0; transform: translateY(-40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 欢迎引导页按钮与预览区 */
.btn-start {
  width: 100%;
  height: 92rpx;
  background: linear-gradient(135deg, #1f6c65 0%, #2a867f 100%);
  color: white;
  border-radius: 56rpx;
  font-size: 30rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 24rpx rgba(46, 168, 157, 0.2);
  border: none;
  margin-bottom: 26rpx;
}

.btn-start:active {
  transform: scale(0.98);
}

.tip-text {
  font-size: 22rpx;
  color: #999;
  display: block;
  text-align: center;
}

.btn-ghost {
  width: 100%;
  height: 78rpx;
  background: #f3f6f8;
  color: #3b4d57;
  border-radius: 40rpx;
  font-size: 26rpx;
  margin-top: 32rpx;
  border: 1px solid #e0e7eb;
}

.btn-back {
  width: 100%;
  height: 78rpx;
  background: #f1f5f7;
  color: #5c6b73;
  border-radius: 40rpx;
  font-size: 26rpx;
  margin-top: 18rpx;
  border: none;
}

.preview-section {
  margin-top: 24rpx;
}
.preview-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200rpx, 1fr));
  gap: 16rpx;
  margin: 16rpx 0 20rpx;
}
.preview-card {
  background: #f8fafc;
  border: 1px solid #e5e7eb;
  border-radius: 14rpx;
  padding: 16rpx;
}
.preview-title {
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 6rpx;
}
.preview-desc {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
}
